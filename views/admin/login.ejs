<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">
    <title>Login | Namaste Savannah</title>
    <% include ../partials/common-styles.ejs %>
    
    <!--icon font css-->
    <link rel="stylesheet" href="/vendors/themify-icon/themify-icons.css">
    <link rel="stylesheet" href="/vendors/flaticon/flaticon.css">
    <link rel="stylesheet" href="/vendors/animation/animate.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <% include ../partials/google-analytics.ejs %>
</head>

<body>
    <% include ../partials/preloader.ejs %>

    <% include ../partials/navbar.ejs %>

    <!-- Jumbotron -->
    <section class="breadcrumb_area">
        <img class="breadcrumb_shap" src="/img/home/banner_bg.png" alt="">
        <div class="container">
            <div class="breadcrumb_content text-center">
                <h1 class="f_p f_700 f_size_50 w_color l_height50 mb_20">Login</h1>
                <p class="f_300 w_color f_size_16 l_height26">
                    This page is intended only for owners. Please contact restaurant for any questions or concerns.
                </p>
            </div>
        </div>
    </section>

    <section class="login_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 d-block mx-auto">
                    
                    <div class="login_info">
                        <h2 class="f_p f_700 f_size_40 t_color3 mb_20">Login</h2>                        
                        <p class="f_p f_300 f_size_15">Namaste! Visit Admin Dashboard</a></p>

                        <% include ../partials/flashMessages.ejs %>
                        
                        <form action="/login" class="login-form mt_60" method="POST">
                            <div class="form-group text_box">
                                <label class="f_p text_c f_400">User Name</label>
                                <input type="text" placeholder="Your Username" name="username">
                            </div>
                            <div class="form-group text_box">
                                <label class="f_p text_c f_400">Password</label>
                                <input type="password" placeholder="******" name="password">
                            </div>
                            <input name="redirectUrl" class="d-none" value=<%= redirectUrl %>>
                            <button type="submit" class="btn_three">Log in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <% include ../partials/footer.ejs %>

    <% include ../partials/common-scripts.ejs %>
    <script src="/vendors/wow/wow.min.js"></script>
    <script src="/vendors/sckroller/jquery.parallax-scroll.js"></script>
    <script src="/vendors/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="/js/plugins.js"></script>
    <script src="/js/main.js"></script>

</body>

</html>