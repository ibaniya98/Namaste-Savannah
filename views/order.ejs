<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon">
    <title>Order Now | Namaste Savannah</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!--icon font css-->
    <link rel="stylesheet" href="vendors/themify-icon/themify-icons.css">
    <link rel="stylesheet" href="vendors/flaticon/flaticon.css">
    <link rel="stylesheet" href="vendors/animation/animate.css">
    <link rel="stylesheet" href="vendors/owl-carousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="vendors/magnify-pop/magnific-popup.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
</head>

<body>
    <% include partials/preloader.ejs %>

    <% include partials/navbar.ejs %>

    <!-- Jumbotron -->
    <section class="breadcrumb_area">
        <img class="breadcrumb_shap" src="img/home/banner_bg.png" alt="">
        <div class="container wow fadeInUp" data-wow-delay="0.4s">
            <div class="breadcrumb_content text-center">
                <h1 class="f_p f_700 f_size_50 w_color l_height50 mb_20">Order Online</h1>
                <p class="f_300 w_color f_size_16 l_height26">
                    Order online to avoid wait time or have it delivered to you.
                </p>
            </div>
        </div>
    </section>

    <!-- Delivery Partners -->
    <section class="s_pricing_area sec_pad wow fadeInUp"  data-wow-delay="0.2s">
        <div class="container custom_container">
            <div class="sec_title text-center mb_70">
                <h2 class="f_p f_size_30 l_height50 f_600 t_color3">Delivery Partners</h2>
                <p class="f_300 f_size_18 l_height34">
                    Select one of our delivery partners to have the food delivered to you.
                </p>
            </div>

            <% include partials/flashMessages.ejs %>

            <% if (currentUser) {  %>
            <div class="text-center mb-5">
                <button type="button" class="btn_four" id="add_option" data-toggle="modal" data-target="#partner">Add
                    New Partner</button>
            </div>
            <% } %>

            <div class="row mb_30">

                <% partners.forEach(partner => { %>
                <div class="col-lg-4 col-sm-6 wow fadeInUp">
                    <div class="s_pricing-item">
                        <img class="img-fluid d-block mx-auto" src="<%= partner.imageUrl %>" alt="<%= partner.name %>">

                        <% if (partner.isPopular) { %>
                        <div class="tag_label">Popular</div>
                        <% } %>

                        <p class="f_p f_300 price_content price_item price">Popular Items</p>

                        <ul class="list-unstyled mt_30">
                            <% partner.popularItems.forEach(item => { %>
                            <li><%= item %></li>
                            <% }) %>
                        </ul>
                        <a href="<%= partner.orderLink %>" class="price_btn btn_hover mt_30" target="_blank">Order Now</a>

                        <!-- Admin Functionality here -->
                        <% if (currentUser) {  %>
                            <% if (partner.showInHomepage) { %>
                                <p class="homepage-visibility">Included in homepage</p>
                            <% } %>
                         
                        <div class="d-flex justify-content-between mt-5">
                            <a class="text-success" data-toggle="modal" data-target="#partner"
                                data-id="<%= partner.id %>">
                                <i class="ti-pencil lead"></i>
                            </a>
                            <a class="text-danger" data-toggle="modal" data-target="#delete-partner"
                                data-id="<%= partner.id %>">
                                <i class=" ti-trash lead"></i>
                            </a>
                        </div>
                        <% } %>

                    </div>
                </div>
                <% }) %>

            </div>


        </div>
    </section>


    <!-- Form Modal -->
    <div class="modal fade" id="partner" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-title">Add New Partner</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/partner/new" class="modal-body contact_form_box" method="POST" id="partner-modal">
                    <div class="row">
                        <div class="col-lg-12">
                            <p>Partner Name *</p>
                            <div class="form-group text_box">
                                <input type="text" id="name" name="partner[name]" placeholder="Uber Eats" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <p>Image Link *</p>
                            <div class="form-group text_box">
                                <input type="text" id="imageUrl" name="partner[imageUrl]"
                                    placeholder="https://uber.com/marketing/uberEats.png" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <p>Order Link *</p>
                            <div class="form-group text_box">
                                <input type="text" id="orderLink" name="partner[orderLink]"
                                    placeholder="Link to the order page" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <p>Popular Items *</p>
                            <div class="form-group text_box">
                                <input type="text" id="items" name="partner[popularItems]"
                                    placeholder="Separate Items by Comma" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group text_box">
                                <input type="checkbox" id="popular" name="partner[isPopular]">
                                Mark as Popular
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group text_box">
                                <input type="checkbox" id="homepage" name="partner[showInHomepage]">
                                Show in homepage
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer d-flex justify-content-center">
                        <button type="submit" class="btn_four" id="btn_partner">Add Partner</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation -->
    <div class="modal fade" id="delete-partner" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Partner</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="" class="modal-body contact_form_box" method="POST" id="delete-modal-form">
                    <div class="row">
                        <div class="col-12">
                            <p>Are you sure you want to delete?</p>
                            <h1 id="partner-name" class="text-center"></h1>
                        </div>
                    </div>

                    <div class="modal-footer d-flex justify-content-between">
                        <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- Custom Online Ordering -->
    <section class="s_pricing_area sec_pad wow fadeInUp">
        <div class="container custom_container">
            <div class="sec_title text-center mb_70">
                <h2 class="f_p f_size_30 l_height50 f_600 t_color3">Online Order</h2>
                <p class="f_300 f_size_18 l_height34">
                    Coming Soon!
                </p>
            </div>
        </div>
    </section>


    <% include partials/footer.ejs %>

    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/propper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="vendors/wow/wow.min.js"></script>
    <script src="vendors/sckroller/jquery.parallax-scroll.js"></script>
    <script src="vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="vendors/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="vendors/isotope/isotope-min.js"></script>
    <script src="vendors/magnify-pop/jquery.magnific-popup.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/main.js"></script>
    <script src="js/partnerUtil.js"></script>

</body>

</html>